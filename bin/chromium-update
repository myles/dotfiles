#!/bin/bash

CURL=`which curl`
WGET=`which wget`
LATEST_VERSION=`$CURL --silent http://commondatastorage.googleapis.com/chromium-browser-snapshots/Mac/LAST_CHANGE`
mkdir /tmp/chromium-update/
echo "Download Chromium version $LATEST_VERSION."
$WGET -q --output-document=/tmp/chromium-update/chrome-mac.zip --output-file=/tmp/chromium-update/download.log "http://commondatastorage.googleapis.com/chromium-browser-snapshots/Mac/$LATEST_VERSION/chrome-mac.zip"
echo "Download completed. Now extracting the zip archive."
unzip -qq /tmp/chromium-update/chrome-mac.zip -d /tmp/chromium-update
rm -fr /Applications/Chromium.app
mv /tmp/chromium-update/chrome-mac/Chromium.app /Applications/Chromium.app
rm -fr /tmp/chromium-update
