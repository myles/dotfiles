#!/bin/bash

CURL=`which curl`
LATEST_VERSION=`$CURL --silent http://build.chromium.org/f/chromium/snapshots/Mac/LATEST`
mkdir /tmp/chromium-update/
echo "Download Chromium version $LATEST_VERSION."
$CURL --silent "http://build.chromium.org/f/chromium/snapshots/Mac/$LATEST_VERSION/chrome-mac.zip" -o /tmp/chromium-update/chrome-mac.zip
echo "Download completed. Now extracting the zip archive."
unzip -qq /tmp/chromium-update/chrome-mac.zip -d /tmp/chromium-update
rm -fr /Applications/Chromium.app
mv /tmp/chromium-update/chrome-mac/Chromium.app /Applications/Chromium.app
rm -fr /tmp/chromium-update
