[core]
	excludesfile = ~/.gitignore
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	attributesfile = ~/.gitattributes
	quotepath = false

[user]
	name = Myles Braithwaite
	email = me@mylesbraithwaite.com
	signingkey = 0x5B423590

[color]
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
  ci = commit
  cia = commit -a
  cam = commit --amend
  cama = commit --amend -a

  cl = clean
  cldf = clean -df

  res = reset
  resa = reset HEAD

  branches = branch -a
  tags = tag
  stashes = stash list

  unstage = reset -q HEAD --
  discard = checkout --
  uncommit = reset --mixed HEAD~
  amend = commit --amend

  nevermind = !git reset --hard HEAD && git clean -d -f

  graph = log --graph -10 --branches --remotes --tags --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order

  precommit = diff --cached --diff-algorithm=minimal -w

[url "git://github.com/"]
	insteadOf = github://

[url "ssh://git@github.com/"]
	pushInsteadOf = github://

[filter "dropoutput_ipynb"]
	clean = /Users/myles/.bin/ipynb_output_filter.py
	smudge = cat

[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true

[http]
	sslVerify = false

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge --skip -- %f
	process = git-lfs filter-process --skip
	required = true

[push]
	default = simple

[commit]
	gpgsign = true

[url "https://"]
	insteadOf = git://
